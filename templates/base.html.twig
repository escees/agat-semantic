<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/semantic_styles.css') }}">
            <link rel="stylesheet" href="{{ asset('build/app.css') }}">
            <link rel="stylesheet" href="{{ asset('build/base.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <!-- Following Menu -->
            <div class="ui large top fixed hidden menu">
                <div class="ui container top-menu stackable">
                    <div class="right menu">
                        {#{% include('menu/menu.html.twig') with {#}
                                {#'buttonClasses': 'item',#}
                                {#'logInClasses': 'ui button',#}
                                {#'signInClasses': 'ui primary button'#}
                            {#}#}
                        {#%}#}
                        <a class="item" href="{{ path('app.homepage') }}">Home</a>
                        <a class="item" href="{{ path('app.portfolio') }}">Portfolio</a>
                        <a class="item">Company</a>
                        <a class="item">Careers</a>
                        <div class="item">
                            <a class="ui button">Log in</a>
                        </div>
                        <div class="item">
                            <a class="ui primary button">Sign Up</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <div class="ui vertical inverted sidebar menu">
                <a class="item">Home</a>
                <a class="item">Work</a>
                <a class="item">Company</a>
                <a class="item">Careers</a>
                <a class="item">Login</a>
                <a class="item">Signup</a>
            </div>

        <!-- Page Contents -->
        <div class="pusher">
            <div class="ui inverted vertical masthead center aligned segment" id="page-content">
                {#<div id="main-image"></div>#}
                <div id="particles-js"></div>
                <div class="ui container">
                    <div class="ui large secondary inverted menu top-menu">
                        {#<a class="toc item">#}
                            {#<i class="sidebar icon"></i>#}
                        {#</a>#}
                        <div class="right item">
                            {#{% include('menu/menu.html.twig') with {#}
                                    {#'buttonClasses': 'blue item',#}
                                    {#'logInClasses': 'ui inverted button',#}
                                    {#'signInClasses': 'ui inverted button'#}
                                {#}#}
                            {#%}#}
                            <a class="blue item" href="{{ path('app.homepage') }}">Home</a>
                            <a class="blue item" href="{{ path('app.portfolio') }}">Portfolio</a>
                            <a class="blue item">Company</a>
                            <a class="blue item">Careers</a>
                            <a class="ui inverted button">Log in</a>
                            <a class="ui inverted button">Sign Up</a>
                            <div class="ui dropdown  item ">
                                    Lang <i class="dropdown icon"></i>
                                <div class="ui menu">
                                    <a class="item language-flag"><i class="united kingdom flag"></i></a>
                                    <a class="item language-flag"><i class="poland flag"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="ui text container">
                    <h1 class="ui inverted header">

                    </h1>
                    <h2>Design your future with us</h2>
                    <div class="ui huge primary button" data-tooltip="Give us your feedback!" data-position="bottom center" id="xxx">Get Started <i class="right arrow icon"></i></div>
                </div>
            </div>

            {% block content %}{% endblock %}

            <div class="ui inverted vertical footer segment">
                <div class="ui container">
                    <div class="ui stackable inverted divided equal height stackable grid">
                        <div class="three wide column">
                            <h4 class="ui inverted header">About</h4>
                            <div class="ui inverted link list">
                                <a href="#" class="item">Sitemap</a>
                                <a href="#" class="item">Contact Us</a>
                                <a href="#" class="item">Religious Ceremonies</a>
                                <a href="#" class="item">Gazebo Plans</a>
                            </div>
                        </div>
                        <div class="three wide column">
                            <h4 class="ui inverted header">Services</h4>
                            <div class="ui inverted link list">
                                <a href="#" class="item">Banana Pre-Order</a>
                                <a href="#" class="item">DNA FAQ</a>
                                <a href="#" class="item">How To Access</a>
                                <a href="#" class="item">Favorite X-Men</a>
                            </div>
                        </div>
                        <div class="seven wide column">
                            <h4 class="ui inverted header">Footer Header</h4>
                            <p>Extra space for a call to action inside the footer that could help re-engage users.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('build/runtime.js') }}"></script>
            <script src="{{ asset('build/semantic_styles.js') }}"></script>
            <script src="{{ asset('build/semantic_javascripts.js') }}"></script>
            <script src="{{ asset('build/app.js') }}"></script>
            <script src="{{ asset('build/base.js') }}"></script>
            <script src="{{ asset('build/menu.js') }}"></script>
            <script src="{{ asset('build/particles.js') }}"></script>
        {% endblock %}
    </body>
</html>
